<%= simple_form_for @employee, remote: true, html: { class: " p-2 mt-3"}, data: { turbo_frame: "_top" } do |f| %>

  <div class="form-inputs">
    <%= f.input :first_name, input_html: { autocomplete: false } %>
    <%= f.input :last_name, input_html: { autocomplete: false } %>
    <%= f.input :email, input_html: { autocomplete: false } %>
    <%= f.input :city, input_html: { autocomplete: false } %>
    <%= f.input :country, priority: [ "Belgium" ], input_html: { autocomplete: false } %>
  </div>
  <div class="form-action">
    <%= button_to 'Cancel', employee_path(@employee), class:"mt-3 inline-flex w-full justify-center rounded-md px-3 py-2 text-sm font-semibold text-gray-800 shadow-sm ring-1 ring-inset ring-gray-800 hover:bg-gray-50 sm:mt-0 sm:w-auto" %>  
    <%= f.submit 'Update', class:"mt-3 inline-flex w-full justify-center rounded-md px-3 py-2 text-sm font-semibold text-gray-800 shadow-sm ring-1 ring-inset ring-gray-800 hover:bg-gray-50 sm:mt-0 sm:w-auto" %>
   </div>
<% end %> 

