<%= simple_form_for @employee, remote: true, html: { class: " p-2 mt-3"}, data: { turbo_frame: "_top" } do |f| %>
  <div class="form-inputs">
    <%= f.input :first_name, input_html: { autocomplete: false } %>
    <%= f.input :last_name, input_html: { autocomplete: false } %>
    <%= f.input :email, input_html: { autocomplete: false } %>
    <%= f.input :city, input_html: { autocomplete: false } %>
    <%= f.input :country, priority: [ "Belgium" ], input_html: { autocomplete: false } %>
    <div class="flex flex-col my-4">
      <%= f.collection_select :team_id, Team.all, :id, :name, prompt: "Select a team"%>
      <%= f.collection_select :position_id, Position.all, :id, :name, prompt: "Select a position" %>
      <%= f.collection_check_boxes :manager, [[true, 'Yes'], [false, 'No']], :first, :last %>
    </div>
  </div>
  <div class="px-4 py-3 sm:flex sm:flex-row sm:px-6">
    <%= button_to 'Cancel', root_path, class:"mt-3 inline-flex w-full justify-center rounded-md px-3 py-2 text-sm font-semibold text-gray-800 shadow-sm ring-1 ring-inset ring-gray-800 hover:bg-gray-50 sm:mt-0 sm:w-auto" %>  
    <%= f.submit 'Ok?', class:"mt-3 inline-flex w-full justify-center rounded-md px-3 py-2 text-sm font-semibold text-gray-800 shadow-sm ring-1 ring-inset ring-gray-800 hover:bg-gray-50 sm:mt-0 sm:w-auto" %>
  </div>
<% end %> 
