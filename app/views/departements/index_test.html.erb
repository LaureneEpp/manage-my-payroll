<div class="wrapper p-6 sm:p-10 space-y-6">
  <div class="flex flex-col space-y-6 md:space-y-0 md:flex-row justify-between">
    <div class="mr-6">
      <h1 class="text-4xl font-semibold mb-2">Departments</h1>
    </div>
  </div>  
  <div class="grid md:grid-cols-2 xl:grid-cols-4 gap-6" >
  <% @hash_departement_teams.each_key do |d| %>
      <button  class="btn-departement btn-ouline box flex items-center p-8 bg-white shadow rounded-lg ease-linear transition-all duration-150">
          <div class="inline-flex flex-shrink-0 items-center justify-center h-16 w-16 text-purple-600 bg-purple-100 rounded-full mr-6">
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="w-8 h-8">
              <path fill-rule="evenodd" d="M1.5 7.125c0-1.036.84-1.875 1.875-1.875h6c1.036 0 1.875.84 1.875 1.875v3.75c0 1.036-.84 1.875-1.875 1.875h-6A1.875 1.875 0 011.5 10.875v-3.75zm12 1.5c0-1.036.84-1.875 1.875-1.875h5.25c1.035 0 1.875.84 1.875 1.875v8.25c0 1.035-.84 1.875-1.875 1.875h-5.25a1.875 1.875 0 01-1.875-1.875v-8.25zM3 16.125c0-1.036.84-1.875 1.875-1.875h5.25c1.036 0 1.875.84 1.875 1.875v2.25c0 1.035-.84 1.875-1.875 1.875h-5.25A1.875 1.875 0 013 18.375v-2.25z" clip-rule="evenodd" />
            </svg>
          </div>
          <div>
            <span class="block text-2xl font-bold"><%= d.name %></span>
          </div>
      </button>
    <% end %>
    <% @hash_departement_teams.each_pair do |d, t| %>
    <div class="hidden overflow-x-hidden overflow-y-auto fixed inset-0 z-50 outline-none focus:outline-none justify-center items-center" id="modal-id">
      <div class="relative w-auto my-6 mx-auto max-w-3xl">
        <!--content-->
      <div  class=" p-8 bg-transparent relative ">
        <button type="button" class="absolute top-4 right-4">X</button>
        <h1 class="uppercase text-white font-bold text-xl"><%= d.teams.count %> teams in <%= d.name %></h1>
        <div class="teams flex flex-row items-center">
            <% t.each do |n| %>
              <div class="circle-team rounded-full bg-gray-800 text-pink-200 w-48 h-48 flex align-center justify-center items-center my-3 mx-3">
                <h2 class="text-xl font-semibold"><%= link_to n.name, departement_team_path(d.id, n) %></h2>
              </div>
            <% end %>
        </div>
      </div>
      </div>
    </div>
  <% end %>
  <div class="hidden opacity-75 fixed inset-0 z-40 bg-gray-800" id="modal-id-backdrop"></div>
</div>