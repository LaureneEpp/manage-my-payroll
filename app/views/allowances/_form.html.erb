<%= simple_form_for @allowance, remote: true, html: { class: " p-2 mt-3"}, data: { turbo_frame: "_top" } do |f| %>

  <div class="form-inputs">
    <%= f.input :name, input_html: { autocomplete: false } %>
    <%= f.input :description, input_html: { autocomplete: false } %>
    <%= f.input :amount, input_html: { autocomplete: false } %>
  </div>
  <div class="my-3">
    <%= button_to 'Cancel', allowances_path, class:"ml-2 rounded-md px-3 py-2 text-sm font-semibold text-gray-800 shadow-sm ring-1 ring-inset ring-gray-800 hover:bg-gray-50 sm:mt-0 sm:w-auto" %>  
    <%= f.submit 'New', class:"ml-2 rounded-md px-3 py-2 text-sm font-semibold text-gray-800 shadow-sm ring-1 ring-inset ring-gray-800 hover:bg-gray-50 sm:mt-0 sm:w-auto" %>
   </div>
<% end %> 
